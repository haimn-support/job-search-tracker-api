# Production environment variables for cloud deployment
# Replace these values with your actual cloud service credentials

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR_PASSWORD]@[YOUR_PROJECT_REF].supabase.co:5432/postgres

# Security
SECRET_KEY=[GENERATE_A_SECURE_SECRET_KEY]
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# App environment
ENVIRONMENT=production
DEBUG=false
TESTING=false
LOG_LEVEL=INFO
HEALTH_CHECK_ENABLED=true

# CORS - Update with your actual frontend URL
BACKEND_CORS_ORIGINS=["https://your-frontend-domain.onrender.com","https://your-frontend-domain.vercel.app"]

# Redis (optional - can use Supabase or skip for free tier)
REDIS_URL=redis://localhost:6379

# Email (optional for notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME="Job Search Tracker"
