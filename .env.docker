# Docker environment configuration
# Copy this file to .env for Docker Compose

# Database Configuration
POSTGRES_DB=interview_tracker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/interview_tracker

# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production-docker
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# Environment
ENVIRONMENT=development
DEBUG=false
TESTING=false

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO

# Health Check
HEALTH_CHECK_ENABLED=true

# API Configuration
API_PORT=8000